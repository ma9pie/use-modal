{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "lib": ["es5", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "src/__test__"]
}
